<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.huami.merchant.activity.service.ValueServiceActivity">
    <include layout="@layout/include_activity_bar" />
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="horizontal"
       >
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:cardCornerRadius="0dp"
            app:cardElevation="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/value_left_recycle"
                android:layout_width="100dp"
                android:layout_height="match_parent"/>
        </android.support.v7.widget.CardView>

        <View android:layout_width="0.5dp"
            android:background="@color/theme_daren"
            android:layout_height="match_parent"></View>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/value_right_recycle"
                android:background="@color/theme_daren"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.v7.widget.CardView>
   </LinearLayout>
</LinearLayout>
