<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:gravity="center"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/gray"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/year_plus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_shape_back"
                android:gravity="center"
                android:onClick="dateClick"
                android:paddingBottom="5dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:src="@mipmap/icon_plus"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/transparent_gray" />

            <EditText
                android:id="@+id/year_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_time_back"
                android:gravity="center"
                android:inputType="number"
                android:lines="1"
                android:maxLength="4"
                android:textStyle="bold"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/font_default" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/transparent_gray" />

            <ImageView
                android:id="@+id/year_minus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_shape_back"
                android:gravity="center"
                android:onClick="dateClick"
                android:paddingBottom="5dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:src="@mipmap/icon_minus"
                android:textColor="@color/white" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/white"
                android:text="年"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/month_plus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_shape_back"
                android:gravity="center"
                android:onClick="dateClick"
                android:paddingBottom="5dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:src="@mipmap/icon_plus"
                android:text="+"
                android:textColor="@color/white" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/transparent_gray" />
            <EditText
                android:id="@+id/month_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_time_back"
                android:gravity="center"
                android:inputType="number"
                android:lines="1"
                android:maxLength="2"
                android:textStyle="bold"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/font_default" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/transparent_gray" />

            <ImageView
                android:id="@+id/month_minus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_shape_back"
                android:gravity="center"
                android:lines="1"
                android:onClick="dateClick"
                android:paddingBottom="5dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:src="@mipmap/icon_minus"
                android:text="-"
                android:textColor="@color/white" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/white"
                android:text="月"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/day_plus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_shape_back"
                android:onClick="dateClick"
                android:paddingBottom="5dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:src="@mipmap/icon_plus"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/transparent_gray" />

            <EditText
                android:id="@+id/day_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_time_back"
                android:gravity="center"
                android:inputType="number"
                android:lines="1"
                android:textStyle="bold"
                android:maxLength="2"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/font_default" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/transparent_gray" />

            <ImageView
                android:id="@+id/day_minus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_shape_back"
                android:onClick="dateClick"
                android:paddingBottom="5dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:src="@mipmap/icon_minus"
                android:textColor="@color/white" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/white"
                android:text="日"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hour_plus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_shape_back"
                android:onClick="dateClick"
                android:paddingBottom="5dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:src="@mipmap/icon_plus"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/transparent_gray" />

            <EditText
                android:id="@+id/hour_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_time_back"
                android:gravity="center"
                android:textStyle="bold"
                android:inputType="number"
                android:lines="1"
                android:paddingBottom="10dp"
                android:maxLength="2"
                android:paddingTop="10dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/font_default" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/transparent_gray" />

            <ImageView
                android:id="@+id/hour_minus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_shape_back"
                android:onClick="dateClick"
                android:paddingBottom="5dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:src="@mipmap/icon_minus"
                android:textColor="@color/white" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/white"
                android:text="时"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/minus_plus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_shape_back"
                android:onClick="dateClick"
                android:paddingBottom="5dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:src="@mipmap/icon_plus"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/transparent_gray" />

            <EditText
                android:id="@+id/minus_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_time_back"
                android:gravity="center"
                android:inputType="number"
                android:lines="1"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:maxLength="2"
                android:textStyle="bold"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/font_default" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/transparent_gray" />

            <ImageView
                android:id="@+id/minus_minus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_shape_back"
                android:onClick="dateClick"
                android:paddingBottom="5dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:src="@mipmap/icon_minus"
                android:textColor="@color/white" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/white"
                android:text="分"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/second_plus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_shape_back"
                android:onClick="dateClick"
                android:paddingBottom="5dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:src="@mipmap/icon_plus"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/transparent_gray" />

            <EditText
                android:id="@+id/second_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_time_back"
                android:gravity="center"
                android:inputType="number"
                android:lines="1"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="0"
                android:textStyle="bold"
                android:maxLength="2"
                android:textColor="@color/black"
                android:textSize="@dimen/font_default" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/transparent_gray" />

            <ImageView
                android:id="@+id/second_minus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_shape_back"
                android:onClick="dateClick"
                android:paddingBottom="5dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:src="@mipmap/icon_minus"
                android:textColor="@color/white" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/white"
                android:text="秒"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_black_color"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_commit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:padding="10dp"
            android:text="确定"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/dialog_dismiss"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消"
            android:textColor="@color/black" />
    </LinearLayout>
</LinearLayout>