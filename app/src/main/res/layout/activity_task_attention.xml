<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/theme_daren"
    tools:context="com.huami.merchant.activity.task.TaskAttentionActivity">
    <include layout="@layout/include_edit_bar" />
    <TextView
        android:id="@+id/tip"
        android:layout_below="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请添加该任务的注意事项,最多10条,每条不多于30字."
        android:gravity="center"
        android:padding="5dp"
        />
    <ScrollView
        android:layout_below="@+id/tip"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="2dp"
                app:cardElevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:layout_marginTop="15dp"
                        >
                        <EditText
                            android:id="@+id/task_attention_ed"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:maxLength="30"
                            android:textColor="@color/font_black"
                            />
                        <ImageView
                            android:id="@+id/clear_attention"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/dismiss_icon"
                            android:padding="10dp"
                            android:tint="@color/colorPrimary"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        >
                        <TextView
                            android:id="@+id/use_template"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="使用模板"
                            android:textColor="@color/colorPrimary"
                            android:padding="10dp"
                            android:autoLink="all"
                            />
                        <TextView
                            android:id="@+id/complete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="完成"
                            android:textColor="@color/colorPrimary"
                            android:padding="10dp"
                            android:autoLink="all"
                            />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="0dp"
                app:cardElevation="10dp">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/task_attention_recycle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/template_liner"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/theme_daren"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/dismiss_icon"
            android:layout_gravity="right"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/tip_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请堂食,不能外卖或者外带"
            android:background="@color/white"
            android:padding="10dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tip_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请保密神秘顾客的身份."
            android:background="@color/white"
            android:padding="10dp"
            android:layout_marginTop="0.5dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tip_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="该任务有必点餐品要求."
            android:background="@color/white"
            android:padding="10dp"
            android:layout_marginTop="0.5dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tip_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="该任务有调研时间段要求."
            android:background="@color/white"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginTop="0.5dp"
            />
        <TextView
            android:id="@+id/tip_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请上传纸质消费小票"
            android:background="@color/white"
            android:padding="10dp"
            android:layout_marginTop="0.5dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tip_six"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请上传全部餐品的照片"
            android:background="@color/white"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginTop="0.5dp"
            />
    </LinearLayout>
</RelativeLayout>
