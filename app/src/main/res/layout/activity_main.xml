<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huami.merchant.activity.main.MainActivity">
    <FrameLayout
        android:id="@+id/content"
        android:layout_above="@+id/bottom_tip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </FrameLayout>

    <View
        android:id="@+id/bottom_tip"
        android:background="@color/theme_daren"
        android:layout_above="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <RadioGroup
        android:id="@+id/bottom_nav"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/tab_task"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/selector_tab_task"
            android:text="任务"
            android:gravity="center"
            android:textColor="@drawable/sel_tv_color"
            android:button="@null"
            />
        <RadioButton
            android:id="@+id/tab_center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/selector_tab_center"
            android:text="商户中心"
            android:button="@null"
            android:textColor="@drawable/sel_tv_color"
            android:gravity="center"
            />
    </RadioGroup>
