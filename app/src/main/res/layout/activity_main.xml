<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huami.merchant.activity.main.MainActivity">
    <FrameLayout
        android:id="@+id/content"
        android:layout_above="@+id/bottom_tip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </FrameLayout>

    <View
        android:id="@+id/bottom_tip"
        android:background="@color/theme_daren"
        android:layout_above="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:id="@+id/tab_task_liner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/tab_task"
                style="@style/RadioButton"
                android:drawableTop="@drawable/selector_tab_task"
                android:background="@null"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_center_liner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/tab_center"
                style="@style/RadioButton"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/selector_tab_center"
                android:background="@null"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/release_task"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@mipmap/release_icon"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
