<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huami.merchant.activity.service.ValueDetailActivity">
    <include layout="@layout/include_edit_bar" />
    <WebView
        android:id="@+id/web_content"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="2dp"
        android:layout_height="0dp"></WebView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:drawableLeft="@mipmap/icon_custom_service"
            android:id="@+id/custom_service"
            android:padding="10dp"
            android:text="客服"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/minus_purchase"
            android:src="@mipmap/minus_purchase"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/purchase_count"
            android:background="@drawable/cicle_back_theme_fram"
            android:layout_width="120dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:maxLength="6"
            android:hint="请输入购买数量"
            android:inputType="number"
            android:numeric="integer"
            android:textSize="@dimen/font_default"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/plus_purchase"
            android:src="@mipmap/plus_purchase"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/purchase"
            android:text="购买"
            android:background="@color/app_theme"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
</LinearLayout>
