<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:gravity="center"
    android:id="@+id/content_top"
    android:layout_gravity="center"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/cicle_back_exit_dialog">
        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确定退出么？"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/theme_black_color"
            android:padding="15dp"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/commit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="确定"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/sel_def_gray_left"
            android:gravity="center" />

        <View
            android:layout_width="0.5dp"
            android:background="@color/theme_daren"
            android:layout_height="match_parent"></View>

        <TextView
            android:id="@+id/dismiss"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:background="@drawable/sel_def_gray_right"
            android:padding="10dp"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>