<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huami.merchant.activity.task.TaskPointActivity">
    <include layout="@layout/include_edit_bar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="需要配置的任务点很多?"
            />
        <TextView
            android:id="@+id/configure_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="配置任务"
            android:textColor="@color/app_theme"
            android:textStyle="bold"
            android:background="@drawable/shape_back"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            />
    </LinearLayout>
    <com.huami.merchant.designView.recycle.XRecyclerView
        android:id="@+id/task_shop_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
