<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huami.merchant.activity.task.TaskInfoActivity">
    <include layout="@layout/include_edit_bar" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/html_recycle"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:layout_height="0dp"/>

    <View
        android:layout_width="match_parent"
        android:background="@color/theme_daren"
        android:layout_height="0.5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <LinearLayout
            android:id="@+id/text_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/icon_character"
                android:text="文本"
                android:drawablePadding="3dp"
                android:textSize="@dimen/twelve"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/link_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/icon_link"
                android:drawablePadding="3dp"
                android:text="链接"
                android:textSize="@dimen/twelve"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/photo_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/icon_picture"
                android:text="图片"
                android:textSize="@dimen/twelve"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/camera_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_camera"
                android:drawablePadding="6dp"
                android:text="拍照"
                android:textSize="@dimen/twelve"
                android:drawableTop="@mipmap/icon_camera"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>


