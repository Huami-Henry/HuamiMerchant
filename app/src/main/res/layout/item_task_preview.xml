<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="5dp"
    android:layout_marginTop="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:text=""
                android:textSize="@dimen/twelve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/task_preview_count"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/user_case_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/submit_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="提交时间:"
                android:textSize="@dimen/twelve"
                android:gravity="right"
                />
            <TextView
                android:textSize="@dimen/twelve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/task_upload_time"
                android:gravity="right"
                android:text=""
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/theme_daren"
            android:layout_height="0.5dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/shop_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLength="25"
                />
            <TextView
                android:id="@+id/task_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="1"
                android:text=""
                android:gravity="right"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/task_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/task_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="审核截止时间:"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/task_end_preview_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                />
            <TextView
                android:id="@+id/pending_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="审核"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textStyle="bold"
                android:textSize="@dimen/sixteen_sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>