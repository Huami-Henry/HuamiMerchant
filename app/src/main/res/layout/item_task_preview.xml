<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:text="一审"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/task_preview_count"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/user_case_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0001"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/submit_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="提交时间:"
            android:gravity="right"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/task_upload_time"
            android:gravity="right"
            android:text="2017.12.12 09:00"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
       <TextView
           android:id="@+id/shop_id"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="0001"
           android:padding="10dp"
           />
        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="华山路一店"
            />
        <TextView
            android:id="@+id/task_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="1"
            android:text="20元"
            android:gravity="right"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/task_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上海市"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/task_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="徐汇区华山路33号"
            android:padding="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottom_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审核截止时间:"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/task_end_preview_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="2017.12.12 09:00"
            />
        <TextView
            android:id="@+id/pending_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审核"
            android:background="@drawable/cicle_back_normal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>
</LinearLayout>
