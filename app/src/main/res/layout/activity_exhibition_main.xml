<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/fragment_content"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"></FrameLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/theme_daren"
        android:layout_height="0.5dp" />
    <RadioGroup
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:button="@null"
            android:text="首页"
            android:textColor="@drawable/selector_tab_font"
            android:gravity="center"
            android:drawableTop="@drawable/selector_tab_home"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/service"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:button="@null"
            android:text="服务"
            android:textColor="@drawable/selector_tab_font"
            android:gravity="center"
            android:drawableTop="@drawable/selector_tab_service"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/sheet"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:button="@null"
            android:textColor="@drawable/selector_tab_font"
            android:text="报表"
            android:gravity="center"
            android:drawableTop="@drawable/selector_tab_task"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:button="@null"
            android:text="我的"
            android:gravity="center"
            android:textColor="@drawable/selector_tab_font"
            android:drawableTop="@drawable/selector_tab_center"
            android:layout_height="wrap_content" />
    </RadioGroup>
</LinearLayout>
