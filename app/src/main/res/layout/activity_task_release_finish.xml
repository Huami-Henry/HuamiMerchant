<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.huami.merchant.activity.task.TaskReleaseFinishActivity">
    <include layout="@layout/include_edit_bar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="0dp"
                app:cardElevation="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="任务已提交审批!"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="将在通过审批后立即发布"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/shape_back"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="审批将在1-3个工作日内完成"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            />
                        <TextView
                            android:id="@+id/complete_approve"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="加速审批"
                            android:padding="10dp"
                            android:gravity="center"
                            android:textColor="@color/colorPrimary"
                            />

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="0dp"
                app:cardElevation="5dp"
                android:layout_marginBottom="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="让更多用户知道您的任务"
                        android:gravity="center"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="0.5dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@color/font_black">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:layout_marginRight="1dp"
                            android:gravity="center"
                            android:minEms="5"
                            android:padding="5dp"
                            android:text="轮播图"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:layout_marginRight="1dp"
                            android:padding="5dp"
                            android:gravity="center_vertical"
                            android:lines="2"
                            android:text="一张图（包含设计,可修改3次）"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="30000元／周"/>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="0.5dp"
                        android:background="@color/font_black">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:layout_marginRight="1dp"
                            android:gravity="center"
                            android:minEms="5"
                            android:padding="5dp"
                            android:text="专题图"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:layout_marginRight="1dp"
                            android:padding="5dp"
                            android:gravity="center_vertical"
                            android:lines="2"
                            android:text="一张图（包含设计，可修改3次)"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:gravity="center"
                            android:lines="2"
                            android:padding="5dp"
                            android:text="20000元／周"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="0.5dp"
                        android:orientation="horizontal"
                        android:background="@color/font_black">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:layout_marginRight="1dp"
                            android:gravity="center"
                            android:padding="5dp"
                            android:minEms="5"
                            android:text="任务排序"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:layout_marginRight="1dp"
                            android:padding="5dp"
                            android:gravity="center"
                            android:lines="2"
                            android:text="置顶位"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="20000元／周"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="0.5dp"
                        android:orientation="horizontal"
                        android:background="@color/font_black">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:layout_marginRight="1dp"
                            android:gravity="center"
                            android:padding="5dp"
                            android:minEms="5"
                            android:text="App推送 "/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:gravity="center"
                            android:lines="2"
                            android:padding="5dp"
                            android:text="10000元／次"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="0.5dp"
                        android:orientation="horizontal"
                        android:background="@color/font_black">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:layout_marginRight="1dp"
                            android:gravity="center"
                            android:padding="5dp"
                            android:minEms="5"
                            android:text="短信推送"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:layout_marginRight="1dp"
                            android:padding="5dp"
                            android:gravity="center"
                            android:lines="2"
                            android:text="按照条数"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="0.5dp"
                        android:orientation="horizontal"
                        android:background="@color/font_black">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:layout_marginRight="1dp"
                            android:gravity="center"
                            android:padding="5dp"
                            android:minEms="5"
                            android:text="公众号宣传"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:layout_marginRight="1dp"
                            android:padding="5dp"
                            android:gravity="center"
                            android:lines="2"
                            android:text="第一篇头条除第一篇位外"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/purchase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="购买宣传"
                        android:textColor="@color/colorPrimary"
                        android:padding="10dp"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
